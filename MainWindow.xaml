<Window x:Class="PotionsPotionsPotions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PotionsPotionsPotions"
        mc:Ignorable="d"
        Title="Potions! Potions! Potions!" Height="600" Width="1000">
    <Grid OpacityMask="White">
        <Grid.Background>
            <ImageBrush ImageSource="hannah-thomson-5456d2cc-204b-4852-beb5-ea53493fda32.jpg" Opacity="0.845"/>
        </Grid.Background>
        <Label Content="Player Inventory&#xD;&#xA;" HorizontalAlignment="Left" Height="45" Margin="10,66,0,0" VerticalAlignment="Top" Width="160" FontFamily="Papyrus" FontSize="20" FontWeight="Bold"/>
        <TextBlock x:Name="PlayerInventoryList" HorizontalAlignment="Left" Height="260" Margin="10,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" FontFamily="Centaur" FontSize="18" Background="#FFC9C9F3" Text="Player Inventory"/>
        <Label Content="Vendor Inventory&#xD;&#xA;" HorizontalAlignment="Left" Height="45" Margin="812,66,0,0" VerticalAlignment="Top" Width="170" FontFamily="Papyrus" FontSize="20" FontWeight="Bold" Background="#00000000"/>
        <TextBlock x:Name="VendorInventoryList" HorizontalAlignment="Left" Height="260" Margin="802,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" FontFamily="Centaur" FontSize="18" Background="#FFC9C9F3" Text="Vendor Inventory"/>
        <Label Content="Potions! Potions! Potions!" HorizontalAlignment="Left" Height="60" Margin="225,0,0,0" VerticalAlignment="Top" Width="435" FontFamily="Papyrus" FontSize="36" FontWeight="Bold"/>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Height="40" Margin="550,519,0,0" VerticalAlignment="Top" Width="120" FontFamily="Centaur" FontSize="22" Background="#FF515D49" Click="SearchButton_Click"/>
        <Rectangle Fill="#FFC9C9F3" HorizontalAlignment="Left" Height="295" Margin="225,190,0,0" Stroke="Black" VerticalAlignment="Top" Width="540"/>
        <Button x:Name="ShowDefinitionsButton" Content="Make Potion" HorizontalAlignment="Left" Height="40" Margin="70,519,0,0" VerticalAlignment="Top" Width="120" FontFamily="Centaur" FontSize="22" Background="#FF515D49" Click="ShowDefinitionsButton_Click"/>
        <Button x:Name="ShowTermsButton" Content="Craftable Potions" HorizontalAlignment="Left" Height="40" Margin="837,519,0,0" VerticalAlignment="Top" Width="145" FontFamily="Centaur" FontSize="22" Background="#FF515D49" Click="ShowTermsButton_Click"/>
        <Button x:Name="ShowAllDataButton" Content="All Potions" HorizontalAlignment="Left" Height="40" Margin="695,519,0,0" VerticalAlignment="Top" Width="120" FontFamily="Centaur" FontSize="22" Background="#FF515D49" Click="ShowAllDataButton_Click"/>
        <TextBox x:Name="Input" HorizontalAlignment="Left" Height="40" Margin="225,519,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Background="#FFC9C9F3" FontSize="20" FontFamily="Centaur"/>
        <TextBlock x:Name="Output" HorizontalAlignment="Left" Height="285" Margin="235,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="530" FontFamily="Centaur" FontSize="18"><Run Text="Check out your recipes!"/></TextBlock>
        <Button x:Name="PlayerInventory_Button" Content="Show Inventory" HorizontalAlignment="Left" Height="40" Margin="25,384,0,0" VerticalAlignment="Top" Width="145" FontFamily="Centaur" FontSize="22" Background="#FF515D49" Click="PlayerInventory_Button_Click"/>
        <Button x:Name="VendorInventory_Button" Content="Show Inventory" HorizontalAlignment="Left" Height="40" Margin="812,384,0,0" VerticalAlignment="Top" Width="145" FontFamily="Centaur" FontSize="22" Background="#FF515D49" Click="VendorInventoryButton_Click"/>

    </Grid>
</Window>
